{% extends "../index.njk" %}

{% block content %}
    <div class="mt-3">
        <h1 class="page-title">Deposits page</h1>
        <a class="btn btn-success float-right mr-3 mt-2" href="deposits/create">‚ûï Create</a>
    </div>
    <table class="table table-hover mt-5">
        <thead>
        <tr>
            <th scope="col">Client</th>
            <th scope="col">Type</th>
            <th scope="col">Balance</th>
            <th scope="col">Percentage</th>
{#            <th scope="col">City</th>#}
{#            <th scope="col">Martial status</th>#}
{#            <th scope="col">Monthly income</th>#}
{#            <th scope="col">Retired</th>#}
{#            <th scope="col">Delete?</th>#}
        </tr>
        </thead>
        <tbody>
        {% for deposit in deposits %}
            <tr>
                <td><a href="/users/{{ deposit.user._id }}">{{ deposit.user.full_name }}</a></td>
                <td>{{ 'Revocable' if deposit.type == 1 else 'Irrevocable' }}</td>
                <td>{{ deposit.sum }}</td>
                <td>{{ deposit.percent }} %</td>
                <td>
                    <form action="/deposit/delete" method="post" class="d-inline"
                          onsubmit="return confirm('Do you really want to delete this deposit?');">
                        <input type="hidden" name="_id" value="{{ deposit._id }}">
                        <button class="btn btn-outline-danger">üóëÔ∏è</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
